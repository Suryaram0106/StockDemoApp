<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView

        android:layout_width="330dp"
        android:layout_height="100dp"
        android:layout_gravity="center|top"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        app:cardUseCompatPadding="true"
        app:cardMaxElevation="1dp"
        app:cardPreventCornerOverlap="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/ic_baseline_circle"
                    android:orientation="vertical">

                <ImageView
                    android:id="@+id/stock_logo"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:scaleType="fitXY"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_logo" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/stock_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:background="@color/white"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="ADB"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/stock_name_brief"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="10dp"
                        android:background="@color/white"
                        android:gravity="left"
                        android:padding="5dp"
                        android:text="Adob Inc"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/stock_range1"
                    android:text="5.49%"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/teal_700"
                    android:background="@color/white"
                    android:gravity="left"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:layout_alignParentTop="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/stock_range2"
                    android:text="5.49%"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/teal_700"
                    android:background="@color/white"
                    android:gravity="left"
                    android:textSize="15sp"
                    android:padding="5dp"
                    android:layout_alignParentTop="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/stock_value_dollar1"
                        android:text="$ 227.76"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:background="@color/white"
                        android:gravity="left"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:layout_alignParentTop="true" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/stock_value_dollar2"
                        android:text="10 Shares"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:background="@color/white"
                        android:gravity="left"
                        android:textSize="15sp"
                        android:padding="5dp"
                        android:layout_alignParentTop="true" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
